# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ========================================
# Database Configuration
# ========================================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=KeyChingDB
DB_CONNECTION_LIMIT=10

# ========================================
# Server Configuration
# ========================================
PORT=3001
NODE_ENV=development

# ========================================
# API URLs
# ========================================
# Backend API URL (for frontend to call)
VITE_API_SERVER_URL=http://localhost:3001

# ========================================
# Stripe Configuration
# ========================================
# Get these from https://dashboard.stripe.com/apikeys

# Stripe Secret Key (server-side)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Publishable Key (client-side)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Webhook Secret (from Stripe Dashboard -> Webhooks)
# Used to verify webhook signatures
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (from Stripe Dashboard -> Products)
# Create these in Stripe for each subscription tier
STRIPE_PRICE_ID_BASIC=price_basic_monthly_id_here
STRIPE_PRICE_ID_PRO=price_pro_monthly_id_here
STRIPE_PRICE_ID_ENTERPRISE=price_enterprise_monthly_id_here

# ========================================
# JWT/Authentication (if using)
# ========================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# ========================================
# Email Configuration (if using)
# ========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_or_app_password
EMAIL_FROM=noreply@yourdomain.com

# ========================================
# Application URLs
# ========================================
APP_URL=http://localhost:5173
APP_NAME=VideoScramblerApp

# ========================================
# Other Settings
# ========================================
LOG_LEVEL=debug
